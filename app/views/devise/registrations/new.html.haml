.container
  
  -# Registration Form
  = simple_form_for(@user, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
    
    -# Header
    %h1 Create Your Account

    -# Fields
    .login-fields
      = hidden_field_tag 'plan', params[:plan]
      
      -# Field Groups
      .form-group
        = f.input :first_name, input_html: { class: "form-control" }, placeholder: "First Name", :autofocus => true
      .form-group
        = f.input :last_name, input_html: { class: "form-control" }, placeholder: "Last Name"
      .form-group
        = f.input :city, input_html: { class: "form-control" }, placeholder: "City"
      .form-group
        = f.input :state, input_html: { class: "form-control" }, placeholder: "State"
      .form-group
        = f.input :portfolio, input_html: { class: "form-control" }, placeholder: "Portfolio"
      .form-group
        = f.input :email, input_html: { class: "form-control" }, placeholder: "Email"
      .form-group
        = f.input :password, input_html: { class: "form-control" }, placeholder: "Password"
      .form-group
        = f.input :password_confirmation, input_html: { class: "form-control" }, placeholder: "Password Confirmation"
      .form-group
        = f.input :biography, as: :text, input_html: { rows: 7, class: "form-control" }, placeholder: "Biography"

      -# Terms
      .checkbox
        %input{name: "Field", tabindex: "4", type: "checkbox", value: "First Choice"}
          %label{for: "Field"} I have read and agree with the Terms of Use.

      -# Button
      %button.btn.btn-primary Register
